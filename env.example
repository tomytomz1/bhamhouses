# ========================================
# BHAM HOUSES - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# GOOGLE PLACES API (Required)
# ========================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API, Maps JavaScript API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ========================================
# AIRTABLE API (Required for Lead Management)
# ========================================
# Get your API key from: https://airtable.com/account
# Create a base with a "Leads" table
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# ========================================
# EMAIL CONFIGURATION (Required for Lead Notifications)
# ========================================
# Use Gmail with App Password (not regular password)
# Setup: https://support.google.com/accounts/answer/185833
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password_here
EMAIL_RECIPIENT=info@bhamhouses.com

# ========================================
# GOOGLE ANALYTICS (Optional - for tracking)
# ========================================
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# GOOGLE SEARCH CONSOLE (Optional - for SEO)
# ========================================
# Get from: https://search.google.com/search-console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_google_site_verification_code_here

# ========================================
# BUSINESS INFORMATION (Required)
# ========================================
NEXT_PUBLIC_BUSINESS_NAME=BHAM Houses
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Main St, Birmingham, MI 48009
NEXT_PUBLIC_PHONE_NUMBER=(586) 324-1248
NEXT_PUBLIC_PHONE_RAW=5863241248
NEXT_PUBLIC_EMAIL=info@bhamhouses.com

# ========================================
# SOCIAL MEDIA (Optional)
# ========================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/bhamhouses
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/bhamhouses
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/bhamhouses

# ========================================
# SEO CONFIGURATION (Required)
# ========================================
NEXT_PUBLIC_SITE_URL=https://bhamhouses.com
NEXT_PUBLIC_SITE_NAME=BHAM Houses - Birmingham, MI Cash Home Buyers
NEXT_PUBLIC_SITE_DESCRIPTION=Birmingham, MI's dedicated cash home buyer. Call back in 24 hours, close in 7 days.

# ========================================
# ADDITIONAL APIS (Optional)
# ========================================

# Google Maps API (for property maps)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio API (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid API (alternative to Gmail)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ========================================
# SECURITY & PERFORMANCE (Optional)
# ========================================

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# CORS settings
CORS_ORIGIN=https://bhamhouses.com

# ========================================
# DEVELOPMENT (Optional)
# ========================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false 